<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VolumeFragment"
    android:background="@color/green">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="241dp"
        android:background="@drawable/bangunruang"
        android:layout_gravity="top"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kalkulator Volume"
        android:textColor="@color/blue2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="250dp"
        android:paddingLeft="132dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/panjang_text"
            android:layout_width="135dp"
            android:layout_height="380dp"
            android:backgroundTint="@color/white"
            android:paddingLeft="50dp"
            android:paddingTop="353dp"
            android:text="Panjang"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lebar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingLeft="50dp"
            android:paddingTop="390dp"
            android:text="Lebar"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tinggi_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingLeft="50dp"
            android:paddingTop="430dp"
            android:text="Tinggi"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/radius_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingLeft="50dp"
            android:paddingTop="470dp"
            android:text="Radius"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/shape_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingLeft="50dp"
            android:paddingTop="505dp"
            android:text="Shape"
            android:textColor="@color/blue2"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/resultV_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="@color/blue2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="570dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/panjangV_et"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@id/panjang_text"
            tools:layout_editor_absoluteY="356dp"
            android:inputType="numberDecimal"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/lebarV_et"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@id/panjang_text"
            tools:layout_editor_absoluteY="395dp"
            android:inputType="numberDecimal"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/tinggiV_et"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@id/panjang_text"
            tools:layout_editor_absoluteY="436dp"
            android:inputType="numberDecimal"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/radiusV_et"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toEndOf="@id/panjang_text"
            tools:layout_editor_absoluteY="475dp"
            android:inputType="numberDecimal"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinnerV_area"
            android:layout_width="227dp"
            android:layout_height="26dp"
            android:layout_marginTop="12dp"
            android:paddingTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/radius_text"
            tools:layout_editor_absoluteX="137dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:paddingTop="280dp"
            android:text="*Balok membutuhkan tiga elemen yakni panjang, lebar, dan tinggi, Pyramid membutuhkan dua elemen yakni panjang dan tinggi dan tabung membutuhkan dua elemen yakni radius dan tinggi*"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>